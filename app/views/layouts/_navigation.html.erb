<%
  navi_menus = [
    {
      link_text: 'event.list'.t,
      active_on: 'dashboards#show',
      path: dashboard_path
    },
    {
      link_text: 'member.list'.t,
      active_on: 'members#index',
      path: members_path
    }
  ]
%>

<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse" type="button">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'site.title'.t, root_path, class: 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if approved_access? %>
        <ul class="nav navbar-nav">
          <% navi_menus.each do |menu| %>
            <% options = {class: 'active'} if "#{controller_name}##{action_name}" == menu[:active_on] %>
            <%= content_tag :li, options do %>
              <% link_to menu[:link_text], menu[:path] %>
            <% end %>
          <% end %>
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if authenticated? %>
          <li>
            <%= link_to session_path, class: 'include-icon', method: :delete do %>
              <%= 'navi.logout'.t(display_name: current_account.display_name) %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= render 'layouts/fb_login_button' %>
          </li>
        <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>


