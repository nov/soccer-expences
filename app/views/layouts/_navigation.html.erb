<%
  navi_menus = [
    {
      link_text: 'Dashboard',
      active_on: 'dashboards',
      path: dashboard_path
    },
    {
      link_text: 'Fake',
      path: '#'
    }
  ]
%>

<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse" type="button">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'site.title'.t, root_path, class: 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if authenticated? %>
        <ul class="nav navbar-nav">
          <% navi_menus.each do |menu| %>
            <% options = {class: 'active'} if controller_name == menu[:active_on] %>
            <%= content_tag :li, options do %>
              <% link_to menu[:link_text], menu[:path] %>
            <% end %>
          <% end %>
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if authenticated? %>
            <%= link_to 'navi.logout'.t, session_path, method: :delete %>
          <% else %>
            <%= render 'layouts/fb_login_button' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>


