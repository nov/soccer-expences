<section class="events bs-docs-section">
  <div class="row">
    <div class="col-md-12">
      <div class="bs-component">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th><%= 'event.date'.t %></th>
              <th><%= 'event.title'.t %></th>
              <th><%= 'event.location'.t %></th>
              <th><%= 'event.num_of_attendees'.t %></th>
              <th><%= 'event.total_cost'.t %></th>
              <th><%= 'event.individual_cost'.t %></th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr class="info">
                <td><%= event.date %></td>
                <td><%= event.title %></td>
                <td><%= event.location %></td>
                <td>%</td>
                <td>%</td>
                <td>%</td>
              </tr>
            <% end %>
            <tr>
              <td>2</td>
              <td>Column content</td>
              <td>Column content</td>
              <td>%</td>
              <td>%</td>
              <td>%</td>
            </tr>
            <tr>
              <td>3</td>
              <td>Column content</td>
              <td>Column content</td>
              <td>%</td>
              <td>%</td>
              <td>%</td>
            </tr>
            <tr>
              <td>4</td>
              <td>Column content</td>
              <td>Column content</td>
              <td>%</td>
              <td>%</td>
              <td>%</td>
            </tr>
          </tbody>
        </table>
        <% if current_account.admin? %>
          <nav>
            <%= link_to new_event_path, class: 'btn btn-primary btn-fab' do %>
              <%= material_icon.add %>
            <% end %>
          </nav>
        <% end %>
      </div>
    </div>
  </div>
</section>