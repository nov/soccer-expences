<div class="well bs-component"%>
  <%= form_for @event do |f| %>
    <fieldset>
      <div class="form-group label-static">
        <%= f.label :title, 'event.title'.t, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'event.placeholder.title'.t %>
        <span class="material-input"></span>
      </div>

      <div class="form-group label-static">
        <%= f.label :location, 'event.location'.t, class: 'control-label' %>
        <%= f.text_field :location, class: 'form-control', placeholder: 'event.placeholder.location'.t %>
        <span class="material-input"></span>
      </div>

      <div class="form-group label-static">
        <%= f.label :date, 'event.date'.t, class: 'control-label' %>
        <%= f.text_field :date, class: 'form-control', placeholder: 'event.placeholder.date'.t, data: {
          provide: 'datepicker',
          'date-format': "yyyy-mm-dd"
        } %>
        <span class="material-input"></span>
      </div>

      <nav>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </nav>
    </fieldset>
  <% end %>
</div>